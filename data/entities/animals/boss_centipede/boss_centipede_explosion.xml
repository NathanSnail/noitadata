  <!-- very sparse emitter -->
  <ParticleEmitterComponent 
    emitted_material_name="plasma_fading"
    offset.x="0"
    offset.y="0"
    x_pos_offset_min="0"
    x_pos_offset_max="0"
    y_pos_offset_min="0"
    y_pos_offset_max="0"
	area_circle_radius.max="35"
