    emission_interval_max_frames="2"
    is_emitting="1" >
  </ParticleEmitterComponent>

    <ParticleEmitterComponent 
    emitted_material_name="plasma_fading"
    offset.x="0"
    offset.y="0"
    count_min="1"
    count_max="8"
    gravity.y="0.0"
    lifetime_min="0.3"
    lifetime_max="0.5"
    airflow_force="0.6"
    airflow_time="0.1"
    airflow_scale="0.03"
	area_circle_radius.max="35"
    is_trail="1"
    trail_gap="0.5"
    render_on_grid="1"
    fade_based_on_lifetime="1"
