<Entity name="$projectile_default">

	<Base file="data/entities/base_projectile.xml" >
    <VelocityComponent
        gravity_y="50" 
        air_friction="-5.0" 
		mass="0.05"
		>
    </VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.8"
    lob_max="1.0"
    speed_min="1"
    speed_max="1"
    direction_random_rad="0.0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="1" 
    on_collision_die="0"
    lifetime="5"
    damage="0"
    velocity_sets_scale="1"
    lifetime_randomness="0"
    ragdoll_force_multiplier="0"
    hit_particle_force_multiplier="0"
    camera_shake_when_shot="0" 
	knockback_force="0.0"
	>
    <config_explosion
      never_cache="1" 
      camera_shake="20" 
      explosion_radius="50" 
      explosion_sprite=""
      explosion_sprite_lifetime="0"
      load_this_entity="data/entities/animals/boss_centipede/boss_centipede_explosion_effect.xml,data/entities/particles/particle_explosion/main_blue.xml"
      create_cell_probability="10" 
      cell_explosion_power_ragdoll_coeff="0.5"
      hole_destroy_liquid="0"
      hole_enabled="1" 
      ray_energy="200000"
	  max_durability_to_destroy="15"
      damage="1.2"
      particle_effect="1" 
      damage_mortals="1"
      physics_explosion_power.min="1.0" 
      physics_explosion_power.max="1.4"
      physics_throw_enabled="1"
      shake_vegetation="1" 
	  spark_material="plasma_fading"
      sparks_count_max="20" 
      sparks_count_min="7" 
      sparks_enabled="1" 
      stains_enabled="1" 
      stains_radius="15" >
    </config_explosion>
  </ProjectileComponent>

  <LightComponent 
    _enabled="1" 
    r="35"
    g="210"
    b="255"
    radius="150" >
  </LightComponent>
  
    <ParticleEmitterComponent 
		emitted_material_name="plasma_fading"
		offset.x="0"
		offset.y="0"
		count_min="1"
		count_max="8"
		gravity.y="10"
		lifetime_min="0.3"
		lifetime_max="0.5"
		airflow_force="0.6"
		airflow_time="0.1"
		airflow_scale="0.03"
		area_circle_radius.max="35"
		is_trail="1"
		trail_gap="0.5"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="2"
		is_emitting="1" >
	</ParticleEmitterComponent>

    <ParticleEmitterComponent 
    emitted_material_name="plasma_fading"
    offset.x="0"
    offset.y="0"
    count_min="1"
    count_max="8"
    gravity.y="-10"
    lifetime_min="0.3"
    lifetime_max="0.5"
