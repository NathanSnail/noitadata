	<!-- FX -->
	<ParticleEmitterComponent 
		emitted_material_name="water_fading"
		x_pos_offset_min="-4.5"
		x_pos_offset_max="4.5"
		y_pos_offset_min="-13"
		y_pos_offset_max="-5"
		x_vel_min="-5"
