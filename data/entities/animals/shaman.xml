			emission_interval_min_frames="30"
			emission_interval_max_frames="120"
			is_emitting="1" >
		</ParticleEmitterComponent>

		<ParticleEmitterComponent 
			emitted_material_name="spark_green"
			offset.x="0"
			offset.y="3"
			fade_based_on_lifetime="1"
			render_on_grid="1"
			x_pos_offset_min="-1"
			y_pos_offset_min="-4"
			x_pos_offset_max="1"
			y_pos_offset_max="1"
