<Entity 
  name="$projectile_default" tags="projectile_player"
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			gravity_y="250"
			air_friction="0.8"
			mass="0.35"
			>
		</VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.5"
    lob_max="0.7"
    speed_min="550"
    speed_max="650"
    friction="1"
    direction_random_rad="0.01"
    on_death_explode="0"
    on_death_gfx_leave_sprite="1" 
    on_lifetime_out_explode="0"
    explosion_dont_damage_shooter="1"
    on_collision_die="1"
    on_collision_remove_projectile="0"
    lifetime="750"
    damage="0"
    damage_scaled_by_speed="1"
    lifetime_randomness="7"
    ragdoll_force_multiplier="0"
    hit_particle_force_multiplier="0.1"
    create_shell_casing="0"
    muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_medium.xml"
    shoot_light_flash_radius="0"
    die_on_low_velocity="1"
    die_on_low_velocity_limit="5"
    collide_with_shooter_frames="6"
    bounces_left="1"
    friendly_fire="1"
    velocity_sets_scale="0"
	knockback_force="1.0"
	physics_impulse_coeff="500"
     >
	<damage_by_type
		slice="0.2"
		>
	</damage_by_type>
    <config_explosion
		damage="0"
		explosion_radius="1"
		>
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="data/projectiles_gfx/arrow.xml" 
    next_rect_animation=""
    rect_animation="" 
     >
  </SpriteComponent>
  
  <ParticleEmitterComponent 
		emitted_material_name="spark_white"
		offset.x="-2"
		offset.y="0"
		x_pos_offset_min="0"
		x_pos_offset_max="0"
		y_pos_offset_min="0"
		y_pos_offset_max="0"
		x_vel_min="0"
		x_vel_max="0"
		y_vel_min="0"
		y_vel_max="0"
		gravity.y="0.0"
		count_min="1"
		count_max="1"
		lifetime_min="0.3"
		lifetime_max="0.5"
		is_trail="1"
		trail_gap="1.0"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		airflow_force="0.1"
		airflow_time="0.001"
		airflow_scale="0.0833"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		emit_cosmetic_particles="1"
		create_real_particles="0"
		is_emitting="1"
    >
	</ParticleEmitterComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/bullet_arrow">
  </AudioComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/deck/arrow.xml"
		>
	</VariableStorageComponent>

</Entity>

