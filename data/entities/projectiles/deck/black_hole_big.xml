	<LuaComponent 
		_enabled="1" 
		script_source_file="data/scripts/projectiles/black_hole_big.lua" 
		execute_every_n_frame="3" >
  </LuaComponent>

  <LuaComponent
    script_source_file="data/scripts/projectiles/black_hole_gravity.lua"
    execute_every_n_frame="1"
    >
  </LuaComponent>

  <MusicEnergyAffectorComponent
      energy_target="1.0">
  </MusicEnergyAffectorComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/black_hole_big"
      set_latest_event_position="1" >
  </AudioComponent>

  <AudioLoopComponent
      file="data/audio/Desktop/projectiles.bank"
      event_name="player_projectiles/black_hole_big/loop"
      auto_play="1">
