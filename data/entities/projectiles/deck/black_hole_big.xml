		emit_cosmetic_particles="1"
		fade_based_on_lifetime="1"
		draw_as_long="1"
		emission_interval_min_frames="2"
		emission_interval_max_frames="2"
		is_emitting="1" >
	</ParticleEmitterComponent>
	
	
  <LightComponent 
    _enabled="1" 
    r="255"
    g="40"
    b="255"
    radius="128" >
  </LightComponent>

  <BlackHoleComponent
    particle_attractor_force="6"
    damage_probability="0.25"
    radius="1">
