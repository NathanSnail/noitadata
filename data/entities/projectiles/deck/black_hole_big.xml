  <SpriteComponent 
    _enabled="1" 
    alpha="0.1" 
    image_file="data/projectiles_gfx/black_hole_big_circle.xml" 
    next_rect_animation="" 
    offset_x="0" 
    offset_y="0" 
    emissive="1"
    additive="1" >
  </SpriteComponent>
  
	<ParticleEmitterComponent 
		emitted_material_name="plasma_fading_pink"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="-40"
		x_pos_offset_max="40"
		y_pos_offset_min="-40"
		y_pos_offset_max="40"
		x_vel_min="-8"
		x_vel_max="8"
