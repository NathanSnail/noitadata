<Entity 
	name="$projectile_default" tags="projectile_player"
	>
	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			air_friction="1.0"
			mass="0.06"
			>
		</VelocityComponent>
	</Base>

	<ProjectileComponent 
		_enabled="1" 
		lob_min="0.8"
		lob_max="1.3"
		speed_min="300"
		speed_max="350"
		direction_random_rad="0.15"
		on_death_explode="1"
		on_death_gfx_leave_sprite="0" 
		on_lifetime_out_explode="1"
		explosion_dont_damage_shooter="1" 
		on_collision_die="1"
		lifetime="40"
		lifetime_randomness="20"
		damage="0.1"
		velocity_sets_scale="1"
		lifetime_randomness="7"
		ragdoll_force_multiplier="0.0025"
		hit_particle_force_multiplier="0.25 "
		camera_shake_when_shot="8.0"
		create_shell_casing="1"
		bounces_left="2"
		bounce_at_any_angle="1"
		shoot_light_flash_radius="100" 
		ragdoll_fx_on_collision="BLOOD_EXPLOSION"
		muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_medium.xml"
		knockback_force="1.0"
		physics_impulse_coeff="2000"
		>
		<config_explosion
			never_cache="1" 
			camera_shake="0.3" 
			explosion_radius="4"
			explosion_sprite="data/particles/explosion_032_glue.xml"
			explosion_sprite_lifetime="0" 
			load_this_entity="data/entities/projectiles/glue.xml"
			create_cell_probability="0" 
			hole_destroy_liquid="0" 
			hole_enabled="1" 
			ray_energy="50000"
			damage="0.0"
			hole_image="data/temp/explosion_hole.png" 
			particle_effect="0 " 
			damage_mortals="1" 
			physics_explosion_power.min="0.3"
			physics_explosion_power.max="0.5" 
			physics_throw_enabled="1" 
			shake_vegetation="1" 
			sparks_count_max="20" 
			sparks_count_min="7" 
			sparks_enabled="0" 
			light_enabled="0" 
			stains_enabled="1"
			stains_radius="1"
			audio_event_name="explosions/slime_small" >
		</config_explosion>
	</ProjectileComponent>

	<!-- trail -->
	<ParticleEmitterComponent 
		emitted_material_name="glue"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="0"
		x_pos_offset_max="0"
		y_pos_offset_min="0"
		y_pos_offset_max="0"
		x_vel_min="-2"
		x_vel_max="2"
		y_vel_min="-20"
		y_vel_max="-10"
		gravity.y="0"
		count_min="1"
		count_max="1"
		lifetime_min="0.2"
		lifetime_max="0.7"
		fade_based_on_lifetime="1"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		is_trail="1"
		trail_gap="6"
		is_emitting="1" >
	</ParticleEmitterComponent>

	<SpriteComponent 
		image_file="data/projectiles_gfx/glue_shot.xml" 
		emissive="0"
		additive="1"
		>
	</SpriteComponent>

	<LightComponent 
		_enabled="1" 
		radius="10" >
	</LightComponent>

	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="projectiles/bullet_launcher">
	</AudioComponent>

	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/deck/glue_shot.xml"
		>
	</VariableStorageComponent>

</Entity>

