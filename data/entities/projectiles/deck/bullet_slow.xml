<Entity name="$projectile_default" tags="projectile_player" >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			air_friction="1"
			gravity_y="0" 
			mass="0.09"
			>
		</VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.8"
    lob_max="1.0"
    speed_min="180"
    speed_max="240"
    friction="1"
    direction_random_rad="0.03"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="1" 
    on_collision_die="1"
    lifetime="50"
    damage="0.45"
    knockback_force="0.1"
    velocity_sets_scale="0"
    lifetime_randomness="7"
	velocity_sets_rotation="0"
    ragdoll_force_multiplier="0.0025"
    hit_particle_force_multiplier="0.25 "
    camera_shake_when_shot="0.4"
    muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_magic_launcher_blue.xml"
    shoot_light_flash_r="100"
    shoot_light_flash_g="190"
    shoot_light_flash_b="255"
    shoot_light_flash_radius="100"
	knockback_force="2.8"
	physics_impulse_coeff="4000"
	>
    <config_explosion
      never_cache="1" 
      damage="0.18"
      camera_shake="2.0" 
      explosion_radius="15"
      explosion_sprite="data/particles/explosion_016_plasma.xml" 
      explosion_sprite_lifetime="0" 
      create_cell_probability="0"
	  explosion_sprite_additive="1"
      hole_destroy_liquid="0" 
      hole_enabled="1" 
      ray_energy="350000"
      particle_effect="0" 
      damage_mortals="1"
	  physics_explosion_power.min="0.1"
      physics_explosion_power.max="0.25"
      physics_throw_enabled="1" 
      shake_vegetation="1" 
      sparks_count_max="1" 
      sparks_count_min="7" 
      sparks_enabled="1" 
      material_sparks_enabled="1"
      material_sparks_count_max="3"
      material_sparks_count_min="0" 
      light_enabled="0" 
      stains_enabled="1"
      stains_radius="1"
	  spark_material="plasma_fading"
      audio_enabled="0" >
	  >
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="data/projectiles_gfx/slow_bullet.xml" 
    next_rect_animation="" 
    offset_x="0" 
    offset_y="0" 
	additive="1"
    rect_animation="fireball"
     >
  </SpriteComponent>
  
  <ParticleEmitterComponent 
		emitted_material_name="plasma_fading"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="-3"
		x_pos_offset_max="3"
		y_pos_offset_min="-3"
		y_pos_offset_max="3"
		gravity.y="0"
		x_vel_min="-8"
		x_vel_max="8"
		y_vel_min="-8"
		y_vel_max="8"
		count_min="1"
		count_max="4"
		lifetime_min="0.6"
		lifetime_max="3.5"
		airflow_force="1.0"
		airflow_time="0.401"
		airflow_scale="0.25"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		render_on_grid="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="2"
		fade_based_on_lifetime="1"
		is_emitting="1" >
	</ParticleEmitterComponent>
	
	<LightComponent 
    _enabled="1" 
    radius="30" 
	r="0"
	g="40"
	b="120">
  </LightComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/bullet_heavy_slow">
  </AudioComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/deck/bullet_slow.xml"
		>
	</VariableStorageComponent>

</Entity>

