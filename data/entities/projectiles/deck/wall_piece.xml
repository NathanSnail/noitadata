			gravity_y="0"
			mass="0.04"
		>
		</VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.8"
    lob_max="1.0"
    speed_min="0"
    speed_max="0"
    direction_random_rad="0"
    on_death_explode="0"
