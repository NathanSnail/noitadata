      shake_vegetation="1" 
      sparks_count_max="20" 
      sparks_count_min="7" 
      sparks_enabled="0" 
      stains_enabled="1"
	  stains_radius="4" 
      light_fade_time="0.2"
      light_r="10"
      light_g="30"
      light_b="10">
