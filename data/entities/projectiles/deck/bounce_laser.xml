    y_vel_max="2"
    count_min="1"
    count_max="2"
	is_trail="1"
	trail_gap="0.8"
    lifetime_min="0.1"
    lifetime_max="0.8"
    emit_real_particles="0"
	render_on_grid="1"
    emit_cosmetic_particles="1"
    emission_interval_min_frames="1"
    emission_interval_max_frames="2"
    is_emitting="1" >
