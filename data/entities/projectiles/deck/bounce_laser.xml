  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="data/projectiles_gfx/laser_green.xml" 
    next_rect_animation="" 
    offset_x="2" 
    offset_y="2" 
    rect_animation=""
    
     >
  </SpriteComponent>

  <LightComponent 
    _enabled="1" 
    radius="150" 
    r="30"
    g="90"
    b="30">
  </LightComponent>

  <ParticleEmitterComponent 
    emitted_material_name="plasma_fading_green"
    offset.x="0"
    offset.y="0"
	gravity.y="0.0"
	x_vel_min="0"
    x_vel_max="0"
