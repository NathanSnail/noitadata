    damage="2.0"
    velocity_sets_scale="1"
    lifetime_randomness="7"
    ragdoll_force_multiplier="0.04"
    hit_particle_force_multiplier="5.5 "
    camera_shake_when_shot="15.0"
	velocity_sets_rotation="1"
    bounces_left="1"
	muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_launcher.xml"
    shoot_light_flash_radius="120"
	shoot_light_flash_r="255"
    shoot_light_flash_g="165"
    shoot_light_flash_b="40"
	knockback_force="1.0"
	>
	<damage_by_type
		fire="1.8"
		>
	</damage_by_type>
    <config_explosion
      never_cache="0" 
      camera_shake="50" 
      explosion_radius="16"
      explosion_sprite="data/particles/explosion_016.xml" 
      load_this_entity="data/entities/particles/particle_explosion/main_gunpowder_small.xml"
      explosion_sprite_lifetime="0" 
      create_cell_probability="70" 
      hole_destroy_liquid="0"
