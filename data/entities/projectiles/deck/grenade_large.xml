    emit_cosmetic_particles="0"
    emission_interval_min_frames="1"
    emission_interval_max_frames="3"
    is_emitting="1" >
  </ParticleEmitterComponent>
  
  <ParticleEmitterComponent 
    emitted_material_name="spark"
    offset.x="0"
    offset.y="0"
    x_pos_offset_min="-1"
    y_pos_offset_min="-1"
    x_pos_offset_max="1"
    y_pos_offset_max="1"
    x_vel_min="-20"
    x_vel_max="20"
    y_vel_min="-20"
    y_vel_max="20"
