  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/bullet_launcher">
  </AudioComponent>
  
  <LightComponent 
    _enabled="1" 
    radius="60" 
	r="120"
	g="80"
	b="10">
  </LightComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/deck/grenade_large.xml"
		>
	</VariableStorageComponent>
  
</Entity>

