<Entity name="$projectile_default" tags="projectile_player" >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			gravity_y="100"
			air_friction="-0.6" 
			mass="0.15"
			>
		</VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.8"
    lob_max="1.1"
    speed_min="100"
    speed_max="200"
    direction_random_rad="0.003"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
	die_on_low_velocity="0"
    explosion_dont_damage_shooter="0"
    on_collision_die="1"
    ragdoll_force_multiplier="0.03"
    lifetime="300"
    ground_penetration_coeff="6"
    velocity_sets_scale="1"
    camera_shake_when_shot="0"
    shoot_light_flash_radius="64"
    hit_particle_force_multiplier="0.1"
    create_shell_casing="0"
    bounces_left="3"
	collide_with_shooter_frames="4"
	penetrate_entities="1"
	friendly_fire="1"
    damage="0"	
	muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_large.xml"
	shoot_light_flash_radius="140"
	shoot_light_flash_r="155"
    shoot_light_flash_g="235"
    shoot_light_flash_b="255"
	knockback_force="1.5"
	>
    <damage_by_type 
        holy="1.75" 
    >
	</damage_by_type>
    <config_explosion
      never_cache="1" 
      damage="1.2"
      camera_shake="0" 
      explosion_radius="30" 
      explosion_sprite="data/particles/explosion_032.xml" 
      explosion_sprite_lifetime="0" 
      create_cell_probability="0" 
      hole_destroy_liquid="0" 
      hole_enabled="1" 
      hole_image="data/temp/explosion_hole.png"
	  explosion_sprite_additive="1"
      ray_energy="100000"
      particle_effect="0"
	  physics_explosion_power.min="0"  
      physics_explosion_power.max="0"  
      physics_throw_enabled="0" 
      shake_vegetation="1" 
      sparks_count_min="7"
      sparks_count_max="15"
      sparks_enabled="1"
	  spark_material="gold"
      light_enabled="1" 
	  light_fade_time="1"
	  light_r="40"
	  light_g="120"
	  light_b="180"
      stains_enabled="1"
      stains_radius="1">
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="data/projectiles_gfx/lance_holy.xml" 
    next_rect_animation=""
    rect_animation="" 
    additive="1"
     >
  </SpriteComponent>
	
	<ParticleEmitterComponent 
		emitted_material_name="gold"
		gravity.y="0.10"
		offset.x="0"
		offset.y="0"
		gravity.y="0.10"
		x_pos_offset_min="-1"
		y_pos_offset_min="0"
		x_pos_offset_max="1"
		y_pos_offset_max="0"
