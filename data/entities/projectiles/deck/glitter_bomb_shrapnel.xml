<Entity
	name="$projectile_default" tags="projectile_player">
	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			gravity_y="120"
			air_friction="2.0"
			mass="0.09"
			>
		</VelocityComponent> 
	</Base>
	
	<SetStartVelocityComponent
		randomize_speed.min="80"
		randomize_speed.max="120"
		randomize_angle.min="0"
		randomize_angle.max="6.28319" 
	>
	</SetStartVelocityComponent>

	<ProjectileComponent
		speed_min="0"
		speed_max="0"
		damage="0"
		lifetime="200"
		die_on_low_velocity="0"
		on_death_explode="1"
		on_death_gfx_leave_sprite="0" 
		on_lifetime_out_explode="1"
		on_collision_die="1"
		><config_explosion
		  damage="0.5"
		  explosion_radius="10" 
		  explosion_sprite="data/particles/explosion_012_poof.xml"
		  spark_material="spark_purple_bright"
    	  audio_event_name="explosion_small" >
		</config_explosion>
	</ProjectileComponent>
	
	<SpriteComponent 
		image_file="data/projectiles_gfx/glitter_bomb_shrapnel.xml"
		offset_x="0" 
		offset_y="0" 
		additive="1"
		>
	</SpriteComponent>

	<!-- FX -->
	<SpriteParticleEmitterComponent
		sprite_file="data/particles/smoke_cloud_tiny_glitter_1.xml"
		emission_interval_min_frames="2"
		emission_interval_max_frames="2"
		additive="1"
		emissive="0"
		scale.x="1.0"
		scale.y="1.0"
		sprite_random_rotation="1"
		randomize_scale.min_x="-0.1" 
		randomize_scale.max_x="0.1" 
		randomize_scale.min_y="-0.1" 
		randomize_scale.max_y="0.1" 
		randomize_velocity.min_y="-10" 
		randomize_velocity.max_y="0" 
		>
	</SpriteParticleEmitterComponent>
	
	<SpriteParticleEmitterComponent
		sprite_file="data/particles/spark_glitter.xml"
		emission_interval_min_frames="2"
		emission_interval_max_frames="16"
		additive="1"
		emissive="1"
		scale.x="1.0"
		scale.y="1.0"
		randomize_lifetime.min="0.5"
		randomize_lifetime.max="2.0"
		scale_velocity.x="0"
		scale_velocity.y="0"
		randomize_velocity.min_x="-10"
		randomize_velocity.max_x="10"
		randomize_velocity.min_y="-10"
		randomize_velocity.max_y="10"
		randomize_position.min_x="-6"
		randomize_position.max_x="6"
		randomize_position.min_y="-6"
		randomize_position.max_y="6"
		>
	</SpriteParticleEmitterComponent>
	
	<AudioLoopComponent
    file="data/audio/Desktop/projectiles.bank"
    event_name="player_projectiles/bomb_glitter/loop"
    auto_play="1">
  </AudioLoopComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/deck/glitter_bomb_shrapnel.xml"
		>
	</VariableStorageComponent>
</Entity>

