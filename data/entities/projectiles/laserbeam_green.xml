<Entity 
  name="$projectile_default" 
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			air_friction="-4"
			gravity_y="0"
			mass="0.04"
		>
	</VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.8"
    lob_max="1.0"
    speed_min="130"
    speed_max="150"
    friction="-15.0"
    direction_random_rad="0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="1" 
    on_collision_die="1"
    lifetime="60"
    damage="0.15"
    velocity_sets_scale="1"
    lifetime_randomness="7"
    ragdoll_force_multiplier="0.01"
    hit_particle_force_multiplier="0.25"
    camera_shake_when_shot="2.0"
    shoot_light_flash_radius="180"
    bounces_left="0"
	muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_laser_green.xml"
    shoot_light_flash_r="70"
    shoot_light_flash_g="70"
    shoot_light_flash_b="155" 
	knockback_force="1.5"
	>
    <config_explosion
      never_cache="1" 
      never_cache="1"
      camera_shake="4.5" 
      explosion_radius="3"
      explosion_sprite="data/particles/explosion_016_plasma_green.xml" 
      explosion_sprite_lifetime="0" 
      create_cell_material="plasma_fading"
      create_cell_probability="15" 
      hole_destroy_liquid="0"
      hole_enabled="1"
      ray_energy="10000"
	  damage="0.1"
      hole_image="data/temp/explosion_hole.png" 
      particle_effect="0 " 
      damage_mortals="1" 
      gore_particle_count="8"
	  physics_explosion_power.min="0.2"
      physics_explosion_power.max="0.7"  
      physics_throw_enabled="1" 
      shake_vegetation="1" 
      sparks_count_max="20" 
      sparks_count_min="7" 
      sparks_enabled="0" 
      stains_enabled="1"
	    stains_radius="4" 
      light_fade_time="0.2"
      light_r="10"
      light_g="10"
      light_b="30">
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="data/projectiles_gfx/laser_green.xml" 
    next_rect_animation="" 
    offset_x="2" 
    offset_y="2" 
    rect_animation="" 
     >
  </SpriteComponent>

  <LightComponent 
    _enabled="1" 
    radius="150" 
    r="3"
    g="9"
    b="3">
  </LightComponent>

  <ParticleEmitterComponent 
    emitted_material_name="plasma_fading_green"
    count_min="1"
    count_max="1"
    offset.x="0"
    offset.y="0"
	gravity.y="0"
    count_min="1"
    count_max="1"
    lifetime_min="0.1"
    lifetime_max="0.3"
	is_trail="1"
	trail_gap="0.5"
    emit_real_particles="0"
    emit_cosmetic_particles="1"
    emission_interval_min_frames="1"
    emission_interval_max_frames="2"
    is_emitting="1" >
  </ParticleEmitterComponent>
  
  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="projectiles/laser_small">
  </AudioComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/laserbeam_green.xml"
		>
	</VariableStorageComponent>

</Entity>