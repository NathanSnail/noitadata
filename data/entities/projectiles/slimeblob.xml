<Entity 
  name="$projectile_default" 
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
    		gravity_y="500"
			air_friction="0"
			mass="0.06"
			>
    	</VelocityComponent> 
	</Base>

  <ProjectileComponent 
    _enabled="1" 
  	speed_min="0"
  	speed_max="0"
    die_on_low_velocity="0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
	explosion_dont_damage_shooter="1"
	collide_with_entities="0"
    damage="0.05"
    on_collision_die="0"
    lifetime="90" 
	knockback_force="1.2"
	>
    <config_explosion
      never_cache="1" 
      camera_shake="5" 
      explosion_radius="24" 
      explosion_sprite="data/particles/explosion_032_slimeburst.xml"
      explosion_sprite_lifetime="0" 
      create_cell_probability="20" 
      create_cell_material="slime_green" 
	  ray_energy="10000"
	  ray_energy="0"
	  damage="1.2"
      hole_destroy_liquid="0" 
      hole_enabled="0" 
      hole_image="" 
      particle_effect="0" 
      damage_mortals="1"
	  physics_explosion_power.min="0"
      physics_explosion_power.max="0" 
      physics_throw_enabled="0" 
      shake_vegetation="0" 
      sparks_enabled="0" 
      sparks_count_max="0" 
      sparks_count_min="0"
      light_fade_time="0.1" 
	  light_enabled="1"
	  light_r="80"
	  light_g="120"
	  light_b="30"
	  light_radius_coeff="2"
	  stains_enabled="0" 
      stains_image="data/temp/explosion_stain.png"
      audio_event_name="explosions/slime_small" >
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="data/particles/blob.xml" 
    next_rect_animation="" 
    offset_x="0" 
    offset_y="0" 
    rect_animation="stand" 
	update_transform_rotation="0"
     >
  </SpriteComponent>
  
	<LightComponent 
		_enabled="1" 
		radius="56" 
		r="150"
		g="180"
		b="20"
		fade_out_time="0.3"
		>
	</LightComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="projectiles/slimeblob">
  </AudioComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/slimeblob.xml"
		>
	</VariableStorageComponent>

</Entity>

