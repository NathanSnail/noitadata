<Entity 
  name="$projectile_default" 
   >
  
	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			mass="0.04"
			>
    	</VelocityComponent> 
	</Base>

  	<ProjectileComponent
		lob_min="0.8"
		lob_max="1.0"
		speed_min="190"
		speed_max="220"
		friction="-2.0"
		direction_random_rad="0.05"
		explosion_dont_damage_shooter="1"
		die_on_low_velocity="0"
		on_death_explode="1"
		on_death_gfx_leave_sprite="0" 
		on_lifetime_out_explode="1"
		explosion_dont_damage_shooter="0" 
		on_collision_die="1"
		lifetime="60"
		damage="0.2" 
		muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_launcher.xml" 
		velocity_sets_scale="1"
		lifetime_randomness="7"
		ragdoll_force_multiplier="0.04"
		hit_particle_force_multiplier="5.5 "
		camera_shake_when_shot="5.0" 
		bounces_left="1"
		shoot_light_flash_radius="80"
		knockback_force="2.0"
		>
		<config_explosion
			never_cache="0" 
			camera_shake="20" 
			explosion_radius="10" 
			explosion_sprite="data/particles/explosion_016.xml" 
			explosion_sprite_lifetime="0" 
			create_cell_probability="5" 
			hole_destroy_liquid="0" 
			explosion_sprite_emissive="1"
			explosion_sprite_additive="1"
			hole_enabled="1" 
			ray_energy="40000"
			damage="0.5"
			particle_effect="1" 
			damage_mortals="1"
			physics_explosion_power.min="0.6" 
			physics_explosion_power.max="0.8"
			physics_throw_enabled="1"
			shake_vegetation="1" 
			sparks_count_max="20" 
			sparks_count_min="7" 
			sparks_enabled="1" 
			stains_enabled="1" 
			stains_radius="15"
			>
		</config_explosion>
	</ProjectileComponent>
	
	<SpriteComponent 
		_enabled="1" 
		alpha="1" 
		image_file="data/projectiles_gfx/fireball_small.xml" 
		next_rect_animation="" 
		offset_x="2" 
		offset_y="2" 
		rect_animation=""
		emissive="1"
		>
	</SpriteComponent>

	<LightComponent 
		_enabled="1" 
		r="255"
		g="100"
		b="10"
		radius="150"
		>
	</LightComponent>
  
	<ParticleEmitterComponent 
		emitted_material_name="smoke"
		offset.x="-3"
		offset.y="0"
		x_pos_offset_min="-1"
		y_pos_offset_min="-1"
		x_pos_offset_max="1"
		y_pos_offset_max="1"
		x_vel_min="-10"
		x_vel_max="10"
		y_vel_min="-10"
		y_vel_max="10"
		count_min="5"
		count_max="5"
		lifetime_min="0.1"
		lifetime_max="0.3"
		create_real_particles="1"
		emit_cosmetic_particles="0"
		emission_interval_min_frames="2"
		emission_interval_max_frames="3"
		is_emitting="1"
		>
	</ParticleEmitterComponent>
  
	<ParticleEmitterComponent 
		emitted_material_name="spark"
		offset.x="0"
		offset.y="-1"
		x_pos_offset_min="-1"
		y_pos_offset_min="-1"
		x_pos_offset_max="1"
		y_pos_offset_max="1"
		x_vel_min="-10"
		x_vel_max="10"
		y_vel_min="0"
		y_vel_max="0"
		count_min="1"
		count_max="2"
		lifetime_min="0.3"
		lifetime_max="0.4"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="2"
		is_emitting="1"
		>
	</ParticleEmitterComponent>
	
  <AudioLoopComponent
      file="data/audio/Desktop/projectiles.bank"
      event_name="projectiles/rocket_passby"
      auto_play="1">
  </AudioLoopComponent>
  
  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="projectiles/rocket">
  </AudioComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/rocket_drone.xml"
		>
	</VariableStorageComponent>

</Entity>

