<Entity 
	name="$projectile_default" 
	>

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			gravity_y="0"
			air_friction="1"
			mass="0.05"
			>
		</VelocityComponent> 
	</Base>

	<ProjectileComponent 
		_enabled="1" 
		lob_min="0.8"
		lob_max="1.0"
		speed_min="50"
		speed_max="50"
		die_on_low_velocity="0"
		on_death_explode="0"
		on_death_gfx_leave_sprite="0" 
		on_lifetime_out_explode="0"
		damage="0.0"
		on_collision_die="0"
		penetrate_entities="1"
		lifetime="80" 
		knockback_force="0.0"
		>
	</ProjectileComponent>
	
	<LightComponent 
		_enabled="1" 
		radius="150" 
		r="45"
		g="45"
		b="90">
	</LightComponent>
	
	<AudioLoopComponent
      file="data/audio/Desktop/projectiles.bank"
      event_name="projectiles/electric/loop"
      auto_play="1">
  </AudioLoopComponent>
	
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/thunder_trap.xml"
		>
	</VariableStorageComponent>
	
	<SpriteParticleEmitterComponent
    sprite_file="data/particles/spark_electric.xml"
    delay="0"
    lifetime="0"
    color.r="1" color.g="1" color.b="1" color.a="1"
    color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="0"
    velocity.x="0" velocity.y="0"
    gravity.x="0" gravity.y="10"
    velocity_slowdown="0"
    rotation="0"
    angular_velocity="0"
    use_velocity_as_rotation="0"
    scale.x="1" scale.y="1"
    scale_velocity.x="0" scale_velocity.y="0"
    emission_interval_min_frames="1"
    emission_interval_max_frames="2"
    count_min="1" count_max="3"
    randomize_rotation.min="-3.1415"
    randomize_rotation.max="3.1415"
    randomize_position.min_x="-14"
    randomize_position.max_x="14"
    randomize_position.min_y="-14"
    randomize_position.max_y="14"
    >
  </SpriteParticleEmitterComponent>
  
  <LuaComponent
	script_source_file="data/scripts/projectiles/thunder_trap.lua"
	execute_every_n_frame="-1"
	execute_on_removed="1"
	>
	</LuaComponent>
</Entity>