<Entity tags="glue">
	<VelocityComponent
		gravity_y="0"
		terminal_velocity="10"
		>
	</VelocityComponent>

	<SpriteComponent 
		alpha="0.6"
		image_file="data/projectiles_gfx/glue.xml" 
		>
	</SpriteComponent>

	<!-- anchor entities that stick to target entities or to terrain -->
	<Entity tags="glue_anchor">
		<Base file="data/entities/projectiles/glue_anchor.xml" />
	</Entity>
	<Entity tags="glue_anchor">
		<Base file="data/entities/projectiles/glue_anchor.xml" />
	</Entity>

	<!-- keep this entity between the anchors + handle the stretching & breaking of glue -->
	<LuaComponent
		script_source_file="data/scripts/projectiles/glue_stretch.lua"
		execute_every_n_frame="1"
		>
	</LuaComponent>

	<!-- find targets for anchors -->
	<LuaComponent
		script_source_file="data/scripts/projectiles/glue_init.lua"
		execute_on_added="1"
		remove_after_executed="1"
		>
	</LuaComponent>

	<LifetimeComponent
		lifetime="500"
		>
	</LifetimeComponent>
