  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/bomb_cart">
  </AudioComponent>

  <AudioLoopComponent
    file="data/audio/Desktop/projectiles.bank"
    event_name="projectiles/fuse_burn_slow"
    auto_play="1">
  </AudioLoopComponent>
  
  <VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/bomb_cart.xml"
		>
	</VariableStorageComponent>

</Entity>
