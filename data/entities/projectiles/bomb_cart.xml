<Entity name="$projectile_default" tags="hittable,projectile,mortal" serialize="1" >
      <VelocityComponent
        updates_velocity="1" >
      </VelocityComponent>

      <ProjectileComponent
      lifetime="420"
      speed_min="0"
      speed_min="0"
      on_lifetime_out_explode="1"
      on_death_explode="1"
      collide_with_world="0"
      on_collision_die="0"
      damage="0"
      muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_launcher_large.xml"
      shoot_light_flash_radius="120"
      shoot_light_flash_r="255"
      shoot_light_flash_g="240"
      shoot_light_flash_b="30"
      ><config_explosion
        never_cache="0" 
        damage="4"
        camera_shake="50" 
        explosion_radius="40" 
        explosion_sprite="data/particles/explosion_040_poof.xml" 
        explosion_sprite_lifetime="0" 
        load_this_entity="data/entities/particles/particle_explosion/main_gunpowder_medium.xml,data/entities/misc/loose_ground.xml"
        create_cell_probability="40" 
        hole_destroy_liquid="0" 
        hole_enabled="1" 
        ray_energy="6000000"
        particle_effect="1" 
        damage_mortals="1"
        physics_explosion_power.min="2.2" 
        physics_explosion_power.max="3.6" 
        physics_throw_enabled="1"
        shake_vegetation="1" 
        sparks_count_min="12" 
        sparks_count_max="15" 
        sparks_enabled="1" 
        stains_enabled="1" 
        stains_radius="15" 
        max_durability_to_destroy="11" >
      </config_explosion>
    </ProjectileComponent>

    <ExplodeOnDamageComponent
    explode_on_death_percent="1"
    explode_on_damage_percent="0.1"
    physics_body_modified_death_probability="0.9"
    physics_body_destruction_required="0.2"
    >
    <config_explosion
        never_cache="0" 
        damage="4"
        camera_shake="50" 
        explosion_radius="40" 
        explosion_sprite="data/particles/explosion_040_poof.xml" 
        explosion_sprite_lifetime="0" 
        load_this_entity="data/entities/particles/particle_explosion/main_gunpowder_medium.xml,data/entities/misc/loose_ground.xml"
        create_cell_probability="40" 
        hole_destroy_liquid="0" 
        hole_enabled="1" 
        ray_energy="6000000"
        particle_effect="1" 
        damage_mortals="1"
        physics_explosion_power.min="2.2" 
        physics_explosion_power.max="3.6" 
        physics_throw_enabled="1"
        shake_vegetation="1" 
        sparks_count_min="12" 
        sparks_count_max="15" 
        sparks_enabled="1" 
        stains_enabled="1" 
        stains_radius="15" 
        max_durability_to_destroy="11" 
		audio_event_name="explosions/cart"
		>
      </config_explosion>
  </ExplodeOnDamageComponent>

    <PhysicsBody2Component 
        allow_sleep="1" 
        linear_damping="0.25" 
        angular_damping="0.4"
        root_offset_x="9"
        root_offset_y="7"
        >
    </PhysicsBody2Component>

    <PhysicsImageShapeComponent 
        body_id="1"
        is_root="1"
        centered="0"
        offset_x="-7"
        offset_y="-15"
        image_file="data/projectiles_gfx/bomb_cart.png"
        material="metal_rust"
    ></PhysicsImageShapeComponent>

    <PhysicsImageShapeComponent 
        body_id="2"
        centered="0"
        offset_x="-9"
        offset_y="-15"
        is_circle="1"
        image_file="data/projectiles_gfx/bomb_cart_wheel_left.png"
        z="-1"
        material="metal_prop_loose"
    ></PhysicsImageShapeComponent>

    <PhysicsImageShapeComponent 
        body_id="3"
        centered="0"
        offset_x="-9"
        offset_y="-15"
        is_circle="1"
        image_file="data/projectiles_gfx/bomb_cart_wheel_right.png"
        z="-1"
        material="metal_prop_loose"
    ></PhysicsImageShapeComponent>

    <PhysicsJoint2MutatorComponent
        joint_id="1"
        motor_speed="0"
        motor_max_torque="20"
        >
    </PhysicsJoint2MutatorComponent>
    <PhysicsJoint2MutatorComponent
        joint_id="2"
        motor_speed="0"
        motor_max_torque="20"
        >
    </PhysicsJoint2MutatorComponent>
    <PhysicsJoint2Component 
        type="REVOLUTE_JOINT"
        joint_id="1"
        break_force="20"
        body1_id="1"
        body2_id="2"
        offset_x="-5"
        offset_y="-1.5"
    ></PhysicsJoint2Component>

    <PhysicsJoint2Component 
        type="REVOLUTE_JOINT"
        joint_id="2"
        break_force="20"
        body1_id="1"
        body2_id="3"
        offset_x="8"
        offset_y="-1.5"
    ></PhysicsJoint2Component>

    <VariableStorageComponent
        name="reverse"
        value_bool="0"
        >
    </VariableStorageComponent>

    <LuaComponent
        script_source_file="data/scripts/projectiles/bomb_cart_init.lua"
        execute_every_n_frame="1"
        execute_times="1" >
    </LuaComponent>

    <LuaComponent
        script_source_file="data/scripts/projectiles/bomb_cart.lua"
        execute_every_n_frame="1">
    </LuaComponent>

  <!-- fx -->

  <ParticleEmitterComponent 
    emitted_material_name="smoke"
    offset.x="-1"
    offset.y="-6"
    x_pos_offset_min="-2"
    y_pos_offset_min="-2"
    x_pos_offset_max="2"
    y_pos_offset_max="2"
    x_vel_min="-10"
    x_vel_max="10"
    y_vel_min="-10"
    y_vel_max="10"
    count_min="1"
    count_max="5"
    lifetime_min="0.1"
    lifetime_max="0.3"
    create_real_particles="1"
    emit_cosmetic_particles="0"
    emission_interval_min_frames="1"
    emission_interval_max_frames="1"
    is_emitting="1" >
  </ParticleEmitterComponent>
  
  <ParticleEmitterComponent 
    emitted_material_name="spark"
    offset.x="-1"
    offset.y="-6"
    fade_based_on_lifetime="1"
    x_pos_offset_min="-2"
    y_pos_offset_min="-2"
    x_pos_offset_max="2"
    y_pos_offset_max="2"
    x_vel_min="-10"
    x_vel_max="10"
    y_vel_min="-10"
    y_vel_max="10"
