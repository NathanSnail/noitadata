<Entity name="$projectile_default">

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			air_friction="0.3"
			gravity_y="200"
			mass="0.08"
			>
		</VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.8"
    lob_max="1.0"
    speed_min="600"
    speed_max="750"
    friction="1"
    direction_random_rad="0.05"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="1" 
    on_collision_die="1"
    lifetime="30"
    damage="0.35"
    velocity_sets_scale="1"
    lifetime_randomness="7"
    ragdoll_force_multiplier="0.05"
    hit_particle_force_multiplier="0.25 "
    camera_shake_when_shot="0.1"
    muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_magic_launcher.xml"
    shoot_light_flash_r="120"
    shoot_light_flash_g="235"
    shoot_light_flash_b="90"
    shoot_light_flash_radius="100" 
	knockback_force="2.6"
	>
    <config_explosion
      never_cache="1" 
      damage="0"
      camera_shake="2.0" 
      explosion_radius="6"
      explosion_sprite="data/particles/explosion_016_slime.xml" 
      explosion_sprite_lifetime="0" 
      create_cell_probability="0"
	  explosion_sprite_additive="1"
      hole_destroy_liquid="0" 
      hole_enabled="1" 
      ray_energy="300000"
      particle_effect="0" 
      damage_mortals="1"
	  physics_explosion_power.min="0.1" 
      physics_explosion_power.max="0.3" 
      physics_throw_enabled="1" 
      shake_vegetation="1" 
      sparks_count_max="1" 
      sparks_count_min="3" 
      sparks_enabled="1" 
      material_sparks_enabled="1"
      material_sparks_count_max="3"
      material_sparks_count_min="0" 
      light_enabled="0" 
      stains_enabled="1"
      stains_radius="1"
	  spark_material="spark_green"
	  >
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="data/projectiles_gfx/fireball_smaller_green.xml" 
    next_rect_animation="" 
    offset_x="0" 
    offset_y="0" 
    rect_animation="fireball"
	additive="1"
     >
  </SpriteComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="projectiles/laser">
  </AudioComponent>
  
  <ParticleEmitterComponent 
		emitted_material_name="spark_yellow"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="-3"
		x_pos_offset_max="3"
		y_pos_offset_min="-1"
		y_pos_offset_max="1"
		gravity.y="0"
		x_vel_min="-2"
		x_vel_max="2"
		y_vel_min="0"
		y_vel_max="0"
		count_min="1"
		count_max="1"
		is_trail="1"
		trail_gap="0.6"
		fade_based_on_lifetime="1"
		lifetime_min="0.1"
		lifetime_max="0.2"
		airflow_force="10.5"
		airflow_time="1.401"
		airflow_scale="0.05"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		render_on_grid="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="2"
		is_emitting="1" >
	</ParticleEmitterComponent>
	
	<ParticleEmitterComponent 
		emitted_material_name="spark_green"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="-1"
		x_pos_offset_max="1"
		y_pos_offset_min="-2"
		y_pos_offset_max="2"
		gravity.y="0"
		x_vel_min="20"
		x_vel_max="80"
		y_vel_min="0"
		y_vel_max="0"
		count_min="1"
		count_max="4"
		is_trail="1"
		trail_gap="1.2"
		fade_based_on_lifetime="1"
		lifetime_min="0.2"
		lifetime_max="0.6"
		airflow_force="1.5"
		airflow_time="0.401"
		airflow_scale="0.05"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		render_on_grid="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="2"
		is_emitting="1" >
	</ParticleEmitterComponent>
	
	<LightComponent 
    _enabled="1" 
    radius="30" >
  </LightComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/machinegun_bullet_tank_super.xml"
		>
	</VariableStorageComponent>

</Entity>

