<Entity 
  name="$projectile_default" 
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
    		gravity_y="50"
			mass="0.06"
			>
    	</VelocityComponent> 
	</Base>

  <ProjectileComponent 
    _enabled="1" 
  	lob_min="0.8"
  	lob_max="1.0"
  	speed_min="260"
  	speed_max="270"
    die_on_low_velocity="1"
    on_death_explode="0"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="0"
	explosion_dont_damage_shooter="1"
    damage="0"
    on_collision_die="1"
    lifetime="120"
	shoot_light_flash_r="255"
    shoot_light_flash_g="140"
    shoot_light_flash_b="10"
    shoot_light_flash_radius="150"
	collide_with_entities="0"
	knockback_force="1.6"
	>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="data/particles/blob.xml" 
    next_rect_animation="" 
    offset_x="0" 
    offset_y="0" 
    rect_animation=""
	update_transform_rotation="0"
     >
  </SpriteComponent>
  
  <ParticleEmitterComponent 
    emitted_material_name="slime_green"
    offset.x="0"
    offset.y="0"
    x_pos_offset_min="-1"
    y_pos_offset_min="-3"
    x_pos_offset_max="1"
    y_pos_offset_max="3"
    x_vel_min="-10"
    x_vel_max="10"
    y_vel_min="-10"
    y_vel_max="10"
    count_min="1"
    count_max="3"
    lifetime_min="0.3"
    lifetime_max="0.6"
	is_trail="1"
	trail_gap="0.2"
	render_on_grid="1"
	fade_based_on_lifetime="1"
    create_real_particles="0"
    emit_cosmetic_particles="1"
    emission_interval_min_frames="1"
    emission_interval_max_frames="1"
    is_emitting="1" >
  </ParticleEmitterComponent>

  <LightComponent 
    _enabled="1" 
    radius="120"
	r="150"
	g="180"
	b="20"
	>
  </LightComponent>
  
  <LuaComponent 
		_enabled="1" 
		script_source_file="data/scripts/projectiles/slimetrail.lua" 
		execute_every_n_frame="2">
   </LuaComponent>
   
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/slimetrail.xml"
		>
	</VariableStorageComponent>
</Entity>

