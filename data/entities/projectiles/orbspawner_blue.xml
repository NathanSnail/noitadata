<Entity 
  name="$projectile_default" 
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
    		gravity_y="0"
			air_friction="0"
			mass="0.06"
			>
    	</VelocityComponent> 
	</Base>

  <ProjectileComponent 
    _enabled="1" 
	lob_min="0.8"
  	lob_max="1.0"
  	speed_min="0"
  	speed_max="0"
    die_on_low_velocity="0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
	explosion_dont_damage_shooter="1"
	bounce_always="1"
    damage="0.1"
    on_collision_die="0"
    lifetime="10" 
	>
    <config_explosion
      never_cache="1" 
      camera_shake="0" 
      explosion_radius="10" 
      explosion_sprite="data/particles/explosion_016_plasma.xml" 
      explosion_sprite_lifetime="0.0" 
      create_cell_probability="0" 
      create_cell_material="" 
	  ray_energy="10000"
      hole_destroy_liquid="1"
	  explosion_sprite_emissive="1"
	  explosion_sprite_additive="1"
      hole_enabled="1" 
      hole_image="" 
      particle_effect="0" 
      damage_mortals="0"
	  physics_explosion_power.min="0.2"
      physics_explosion_power.max="0.3"
      physics_throw_enabled="1" 
      shake_vegetation="1" 
      sparks_enabled="0" 
      sparks_count_max="0" 
      sparks_count_min="0"
      light_fade_time="0.01" 
      stains_enabled="0" 
      stains_image="data/temp/explosion_stain.png" 
      audio_event_name="explosions/magic_small" >
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="data/projectiles_gfx/orb_blue.xml" 
    next_rect_animation="" 
    offset_x="6" 
    offset_y="6" 
    rect_animation="spawn" 
     
     
	update_transform_rotation="0"
	>
  </SpriteComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="data/projectiles_gfx/orb_blue.xml" 
    next_rect_animation="" 
    offset_x="6" 
    offset_y="6" 
    rect_animation="spawn" 
	emissive="1"
    additive="1"
     
	update_transform_rotation="0"
	>
  </SpriteComponent>

  <LuaComponent 
		_enabled="1" 
		script_source_file="data/scripts/projectiles/orbspawn_blue.lua" 
		remove_after_executed="1"
		>
   </LuaComponent>
   
   <LightComponent 
    _enabled="1" 
    radius="150" 
    r="30"
    g="90"
    b="30">
  </LightComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="projectiles/orb_a" >
  </AudioComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/orbspawner_blue.xml"
		>
	</VariableStorageComponent>

</Entity>

