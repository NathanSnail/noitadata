<Entity 
  name="$projectile_default" 
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			air_friction="-10"
			gravity_y="0"
			mass="0.04"
		>
	</VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.8"
    lob_max="1.0"
    speed_min="130"
    speed_max="150"
    friction="-15.0"
    direction_random_rad="0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="1" 
    on_collision_die="1"
	die_on_liquid_collision="1"
    lifetime="30"
    damage="0.35"
    velocity_sets_scale="1"
    lifetime_randomness="7"
    ragdoll_force_multiplier="0.01"
    hit_particle_force_multiplier="0.25"
    camera_shake_when_shot="2.0"
    shoot_light_flash_radius="180"
	go_through_this_material="gem_box2d"
    bounces_left="10"
	bounce_always="1"
	bounce_energy="0.9"
	muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_laser.xml"
    shoot_light_flash_r="70"
    shoot_light_flash_g="70"
    shoot_light_flash_b="155" 
	knockback_force="1.5"
	>
    <config_explosion
      never_cache="1" 
      never_cache="1"
      camera_shake="4.5" 
      explosion_radius="3"
      explosion_sprite="data/particles/explosion_016_plasma.xml" 
      explosion_sprite_lifetime="0" 
      create_cell_material="plasma_fading"
      create_cell_probability="15" 
      hole_destroy_liquid="0"
      hole_enabled="1"
      ray_energy="10000"
	  damage="0"
      hole_image="data/temp/explosion_hole.png" 
      particle_effect="0 " 
      damage_mortals="1" 
      gore_particle_count="8"
	  physics_explosion_power.min="0.2"
      physics_explosion_power.max="0.7" 
      physics_throw_enabled="1" 
      shake_vegetation="1" 
      sparks_count_max="20" 
      sparks_count_min="7" 
      sparks_enabled="0" 
      stains_enabled="1"
	  stains_radius="4" 
      light_fade_time="0.2"
      light_r="10"
      light_g="10"
      light_b="30">
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="data/projectiles_gfx/laser.xml" 
    next_rect_animation="" 
    offset_x="0" 
    offset_y="0" 
    rect_animation="" 
     >
  </SpriteComponent>

  <LightComponent 
    _enabled="1" 
    radius="150" 
    r="30"
    g="120"
    b="160">
  </LightComponent>

  <ParticleEmitterComponent 
    emitted_material_name="plasma_fading"
    count_min="0"
    count_max="1"
    offset.x="0"
    offset.y="0"
	gravity.y="0"
    count_min="1"
    count_max="1"
	is_trail="1"
	trail_gap="0.5"
    lifetime_min="0.2"
    lifetime_max="0.4"
	render_on_grid="1"
    emit_real_particles="0"
    emit_cosmetic_particles="1"
	fade_based_on_lifetime="0"
    emission_interval_min_frames="1"
    emission_interval_max_frames="1"
    is_emitting="1" >
  </ParticleEmitterComponent>
  
  <SpriteParticleEmitterComponent
    sprite_file="data/particles/spark_electric.xml"
    delay="0"
    lifetime="0"
    color.r="1" color.g="1" color.b="1" color.a="1"
    color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="0"
    velocity.x="0" velocity.y="0"
    gravity.x="0" gravity.y="10"
    velocity_slowdown="0"
    rotation="0"
    angular_velocity="0"
    use_velocity_as_rotation="0"
    scale.x="1" scale.y="1"
    scale_velocity.x="0" scale_velocity.y="0"
    emission_interval_min_frames="1"
    emission_interval_max_frames="3"
    count_min="1" count_max="1"
    randomize_rotation.min="-3.1415"
    randomize_rotation.max="3.1415"
    randomize_position.min_x="-2"
    randomize_position.max_x="2"
    randomize_position.min_y="-2"
    randomize_position.max_y="2"
    >
  </SpriteParticleEmitterComponent>
  
  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="projectiles/laser">
  </AudioComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/laser_bouncy.xml"
		>
	</VariableStorageComponent>

</Entity>