<Entity 
  name="$projectile_default" 
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
    		gravity_y="100"
			mass="0.067"
			>
    	</VelocityComponent> 
	</Base>

  <ProjectileComponent 
    _enabled="1" 
  	lob_min="0.8"
  	lob_max="1.0"
  	speed_min="160"
  	speed_max="170"
    die_on_low_velocity="1"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
	explosion_dont_damage_shooter="1"
    damage="0"
    on_collision_die="1"
	damage_game_effect_entities="data/entities/misc/effect_frozen_short.xml,"
    lifetime="80" 
	knockback_force="0.2"
	physics_impulse_coeff="1000"
	>
	<damage_by_type
		ice="0.0"
		>
	</damage_by_type>
    <config_explosion
      never_cache="1" 
      camera_shake="0" 
      explosion_radius="8" 
      explosion_sprite="" 
      explosion_sprite_lifetime="0" 
      create_cell_probability="100" 
      create_cell_material="blood_cold_vapour" 
      hole_destroy_liquid="0"
      hole_enabled="1" 
	  damage="1"
	  ray_energy="5000"
      hole_image="data/temp/explosion_hole.png" 
      particle_effect="1" 
      damage_mortals="1"
	  physics_explosion_power.min="0.6" 
      physics_explosion_power.max="0.9" 
      physics_throw_enabled="1" 
      shake_vegetation="1" 
	  spark_material="plasma_fading"
      sparks_enabled="1" 
      sparks_count_max="20" 
      sparks_count_min="10"
      light_fade_time="0.8" 
      stains_enabled="1" 
      stains_image="data/temp/explosion_stain.png" >
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="data/projectiles_gfx/iceball.xml"
    next_rect_animation="" 
    offset_x="16" 
    offset_y="12" 
    rect_animation=""
	additive="1"
     >
  </SpriteComponent>

  <ParticleEmitterComponent 
    emitted_material_name="blood_cold_vapour"
    offset.x="0"
    offset.y="1"
    x_pos_offset_min="-1"
    y_pos_offset_min="-1"
    x_pos_offset_max="1"
    y_pos_offset_max="1"
    x_vel_min="-10"
    x_vel_max="10"
    y_vel_min="-10"
    y_vel_max="10"
    count_min="2"
    count_max="3"
    lifetime_min="0.1"
    lifetime_max="0.3"
    create_real_particles="1"
    emit_cosmetic_particles="0"
    emission_interval_min_frames="1"
    emission_interval_max_frames="6"
    is_emitting="1" >
  </ParticleEmitterComponent>
  
  <ParticleEmitterComponent 
    emitted_material_name="plasma_fading"
    offset.x="0"
    offset.y="0"
	gravity.y="-100.60"
    x_pos_offset_min="-1"
    y_pos_offset_min="-5"
    x_pos_offset_max="1"
    y_pos_offset_max="5"
    x_vel_min="-10"
    x_vel_max="10"
    y_vel_min="-1"
    y_vel_max="1"
    count_min="1"
    count_max="1"
    lifetime_min="0.63"
    lifetime_max="0.9"
	is_trail="1"
	trail_gap="0.2"
	render_on_grid="1"
	fade_based_on_lifetime="1"
    create_real_particles="0"
    emit_cosmetic_particles="1"
    emission_interval_min_frames="1"
    emission_interval_max_frames="3"
    is_emitting="1" >
  </ParticleEmitterComponent>
  
  <ParticleEmitterComponent 
    emitted_material_name="spark_blue"
    offset.x="-4"
    offset.y="0"
	gravity.y="-100.60"
    x_pos_offset_min="-1"
    y_pos_offset_min="-3"
    x_pos_offset_max="1"
    y_pos_offset_max="3"
    x_vel_min="-10"
    x_vel_max="10"
    y_vel_min="-1"
    y_vel_max="1"
    count_min="1"
    count_max="1"
    lifetime_min="0.3"
    lifetime_max="0.6"
	is_trail="1"
	trail_gap="0.8"
    create_real_particles="1"
    emit_cosmetic_particles="0"
    emission_interval_min_frames="1"
    emission_interval_max_frames="2"
    is_emitting="1" >
  </ParticleEmitterComponent>
  
   <SpriteParticleEmitterComponent
    sprite_file="data/particles/smoke_blue.xml"
    delay="0"
    lifetime="0"
	additive="1"
    color.r="1" color.g="1" color.b="1" color.a="1"
    color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-2"
    velocity.x="0" velocity.y="0"
    gravity.x="0" gravity.y="-20"
    velocity_slowdown="0"
    rotation="0"
    angular_velocity="0"
    use_velocity_as_rotation="0"
    scale.x="1" scale.y="1"
    scale_velocity.x="0" scale_velocity.y="0"
    emission_interval_min_frames="2"
    emission_interval_max_frames="4"
    count_min="1" count_max="1"
    randomize_rotation.min="-0.3415"
    randomize_rotation.max="0.3415"
    randomize_angular_velocity.min="-1.3415"
    randomize_angular_velocity.max="1.3415"
    randomize_position.min_x="2"
    randomize_position.max_x="8"
    randomize_position.min_y="-2"
    randomize_position.max_y="2"
    randomize_velocity.min_x="-10"
    randomize_velocity.max_x="10"
    randomize_velocity.min_y="-10"
    randomize_velocity.max_y="10"
	is_emitting="1"
    >
  </SpriteParticleEmitterComponent>

  <LightComponent 
    _enabled="1" 
    radius="150" >
  </LightComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="projectiles/icethrower">
  </AudioComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/icethrower.xml"
		>
	</VariableStorageComponent>

</Entity>

