<Entity name="$projectile_default">
	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			_enabled="1"
			air_friction="-6"
			gravity_y="0"
			mass="0.04"
			terminal_velocity="400"
			>
		</VelocityComponent> 
	</Base>

	<ProjectileComponent 
		lob_min="0.8"
		lob_max="1.0"
		speed_min="1"
		speed_max="2"
		direction_random_rad="0.15"
		die_on_liquid_collision="0"
		on_death_explode="1"
		on_death_gfx_leave_sprite="0"
		on_lifetime_out_explode="1"
		friendly_fire="1"
		shoot_light_flash_radius="100"
		shoot_light_flash_r="255"
		shoot_light_flash_g="30"
		shoot_light_flash_b="30"
		velocity_sets_scale="1"
		damage="0.6"
		lifetime="120"
		penetrate_entities="0"
		hit_particle_force_multiplier="0.25"
		knockback_force="1.5"
		bounces_left="2"
		bounce_energy="0.25"
		bounce_always="1"
		bounce_at_any_angle="1"
		ragdoll_force_multiplier="0.01"
		ragdoll_fx_on_collision="BLOOD_SPRAY"
		damage_game_effect_entities="data/entities/misc/effect_curse_cloud_01_temporary.xml,"> 
		<config_explosion
			never_cache="1" 
			camera_shake="0"
			damage="0"
			explosion_radius="1" 
			explosion_sprite="data/particles/explosion_016_plasma_red.xml" 
			explosion_sprite_lifetime="0.2" 
			create_cell_probability="0" 
			create_cell_material="" 
			ray_energy="0"
			hole_destroy_liquid="0" 
			hole_enabled="0" 
			hole_image="" 
			particle_effect="0" 
			damage_mortals="0"
			physics_explosion_power.min="0"
			physics_explosion_power.max="0" 
			physics_throw_enabled="0" 
			shake_vegetation="1" 
			sparks_enabled="0" 
			sparks_count_max="0" 
			sparks_count_min="0"
			light_fade_time="0.1" 
			light_enabled="1"
			light_r="255"
			light_g="30"
			light_b="30"
			light_radius_coeff="64"
			stains_enabled="0" 
			stains_image="data/temp/explosion_stain.png" >
		</config_explosion>
	</ProjectileComponent>

	<SpriteComponent
		image_file="data/projectiles_gfx/orb_red.xml" >
	</SpriteComponent>

	<SpriteComponent 
		image_file="data/particles/explosion_016_plasma_red.xml" 
		z_index="-1.1">
	</SpriteComponent>

	<!-- FX -->
	<ParticleEmitterComponent 
		emitted_material_name="spark_red_bright"
		offset.x="0"
		offset.y="3"
		fade_based_on_lifetime="1"
		render_on_grid="1"
		x_pos_offset_min="-1"
		y_pos_offset_min="-4"
		x_pos_offset_max="1"
		y_pos_offset_max="1"
		airflow_force="0.3"
		airflow_time="0.2"
		airflow_scale="0.05"
		gravity.y="0"
		count_min="1"
		count_max="1"
		is_trail="1"
		trail_gap="4"
		lifetime_min="1.3"
		lifetime_max="8.9"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		emission_interval_min_frames="3"
		emission_interval_max_frames="3"
		is_emitting="1" >
	</ParticleEmitterComponent>

	<ParticleEmitterComponent 
		_enabled="1"
		emitted_material_name="spark_red_bright"
		offset.x="0"
		offset.y="0"
		gravity.y="0.0"
		x_vel_min="0"
		x_vel_max="0"
		y_vel_min="-5"
		y_vel_max="5"
		count_min="1"
		count_max="1"
		is_trail="1"
		trail_gap="8"
		lifetime_min="0.2"
		lifetime_max="0.8"
		emit_real_particles="0"
		render_on_grid="1"
		emit_cosmetic_particles="1"
		fade_based_on_lifetime="0"
		emission_interval_min_frames="1"
		emission_interval_max_frames="2"
		is_emitting="1" >
	</ParticleEmitterComponent>

	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="projectiles/orb_cursed" >
	</AudioComponent>

	<AudioLoopComponent
		file="data/audio/Desktop/animals.bank"
   		event_name="animals/ghost/movement_loop"
		set_speed_parameter="1"
		auto_play="1">
	</AudioLoopComponent>
	
	<AudioLoopComponent
		file="data/audio/Desktop/projectiles.bank"
		event_name="projectiles/magic_curse/loop"
		auto_play="1">
	</AudioLoopComponent>
	
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/orb_cursed.xml"
		>
	</VariableStorageComponent>
</Entity>

