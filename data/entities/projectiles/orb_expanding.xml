<Entity name="$projectile_default">
	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			_enabled="1"
			air_friction="0"
			terminal_velocity="200"
			gravity_y="0"
			mass="0.04"
			>
		</VelocityComponent> 
	</Base>

	<ProjectileComponent 
		lob_min="0.8"
		lob_max="1.0"
		speed_min="45"
		speed_max="55"
		direction_random_rad="0.15"
		die_on_liquid_collision="0"
		on_death_explode="1"
		on_death_gfx_leave_sprite="0"
		on_lifetime_out_explode="1"
		friendly_fire="1"
		collide_with_entities="0"
		shoot_light_flash_radius="100"
		shoot_light_flash_r="255"
		shoot_light_flash_g="30"
		shoot_light_flash_b="30"
		damage="3.0"
		lifetime="180"
		hit_particle_force_multiplier="0.25"
		knockback_force="1.5"
		ragdoll_force_multiplier="0.05"
		damage_every_x_frames="15"
		> 
		<config_explosion
			never_cache="1" 
			camera_shake="0"
			damage="0"
			explosion_radius="4" 
			explosion_sprite="data/particles/explosion_016.xml" 
			explosion_sprite_lifetime="0.2" 
			create_cell_probability="0" 
			create_cell_material="" 
			hole_destroy_liquid="1" 
			hole_enabled="1" 
			ray_energy="300000"
			particle_effect="0" 
			damage_mortals="1"
			physics_explosion_power.min="0.1"
			physics_explosion_power.max="0.3" 
			physics_throw_enabled="0" 
			physics_throw_enabled="1" 
			shake_vegetation="1" 
			sparks_enabled="0" 
			material_sparks_enabled="0"
			light_fade_time="0.1" 
			light_enabled="1"
			light_r="255"
			light_g="30"
			light_b="30"
			light_radius_coeff="64"
			stains_enabled="0" 
			stains_image="data/temp/explosion_stain.png"
			spark_material="spark" >
		</config_explosion>
	</ProjectileComponent>

	<!-- main sprite -->
	<SpriteComponent
		image_file="data/projectiles_gfx/orb_expanding.xml"
		additive="0"
		emissive="0" >
	</SpriteComponent>

	<!-- glow sprite -->
	<Entity>
		<InheritTransformComponent
			only_position="1" >
		</InheritTransformComponent>
		<SpriteComponent
			image_file="data/projectiles_gfx/orb_expanding_glow.xml"
			additive="1"
			emissive="1"
			update_transform_rotation="0" >
		</SpriteComponent>
	</Entity>

	<!-- launch flash -->
	<SpriteComponent 
		image_file="data/particles/explosion_016.xml" 
		z_index="-1.1">
	</SpriteComponent>

	<!-- circles. this emitter modified by orb_expanding.lua -->
	<ParticleEmitterComponent 
		emitted_material_name="spark"
		fade_based_on_lifetime="1"
		render_on_grid="1"
		x_pos_offset_min="0"
		y_pos_offset_min="0"
		x_pos_offset_max="0"
		y_pos_offset_max="0"
		area_circle_radius.min="1"
		area_circle_radius.max="1"
		airflow_force="0.03"
		airflow_time="0.2"
		airflow_scale="0.05"
		gravity.y="0"
		count_min="7"
		count_max="15"
		lifetime_min="1.0"
		lifetime_max="5.0"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		emission_interval_min_frames="14"
		emission_interval_max_frames="14"
		is_emitting="1" >
	</ParticleEmitterComponent>

	<!-- trajectory -->
	<ParticleEmitterComponent 
		emitted_material_name="spark"
		fade_based_on_lifetime="1"
		render_on_grid="1"
		x_pos_offset_min="0"
		y_pos_offset_min="0"
		x_pos_offset_max="0"
		y_pos_offset_max="0"
		airflow_force="0.03"
		airflow_time="0.2"
		airflow_scale="0.05"
		gravity.y="0"
		count_min="1"
		count_max="1"
		lifetime_min="1.0"
		lifetime_max="5.0"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		emission_interval_min_frames="4"
		emission_interval_max_frames="4"
		is_emitting="1" >
	</ParticleEmitterComponent>

	<!-- ring: launch -->
	<ParticleEmitterComponent 
		emitted_material_name="spark_red"
		emitter_lifetime_frames="2"
		fade_based_on_lifetime="1"
		render_on_grid="1"
		x_pos_offset_min="0"
		y_pos_offset_min="0"
		x_pos_offset_max="0"
		y_pos_offset_max="0"
		area_circle_radius.min="4"
		area_circle_radius.max="4"
		velocity_always_away_from_center="30"
		friction="5.2"
		airflow_force="0.03"
		airflow_time="0.2"
		airflow_scale="0.05"
		gravity.y="0"
		count_min="10"
		count_max="10"
		lifetime_min="1.0"
		lifetime_max="5.0"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		is_emitting="1" >
	</ParticleEmitterComponent>

	<!-- ring: ready -->
	<ParticleEmitterComponent 
		emitted_material_name="spark_yellow"
		delay_frames="115"
		emitter_lifetime_frames="2"
		fade_based_on_lifetime="1"
		render_on_grid="1"
		x_pos_offset_min="0"
		y_pos_offset_min="0"
		x_pos_offset_max="0"
		y_pos_offset_max="0"
		area_circle_radius.min="9"
		area_circle_radius.max="9"
		velocity_always_away_from_center="60"
		friction="5.2"
		airflow_force="0.03"
		airflow_time="0.2"
		airflow_scale="0.05"
		gravity.y="0"
		count_min="50"
		count_max="50"
		lifetime_min="1.0"
		lifetime_max="5.0"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		emission_interval_min_frames="100"
		emission_interval_max_frames="100"
		is_emitting="1" >
	</ParticleEmitterComponent>

	<LightComponent
		radius="30"
		r="255"
		g="255"
		b="2"
		>
	</LightComponent>

	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="projectiles/orb_cursed" >
	</AudioComponent>

	<VariableStorageComponent
		name="base_damage"
		value_float="3.0"
		>
	</VariableStorageComponent>

	<LuaComponent
		script_source_file="data/scripts/projectiles/orb_expanding.lua"
		execute_on_added="data/scripts/projectiles/orb_expanding.lua"
		execute_every_n_frame="1"
		execute_times="116" >
	</LuaComponent>
	
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/orb_expanding.xml"
		>
	</VariableStorageComponent>
</Entity>

