<Entity name="$projectile_default">

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			gravity_y="0" 
			air_friction="-2.0" 
			mass="0.05"
			>
		</VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.8"
    lob_max="1.1"
    speed_min="1450"
    speed_max="1850"
    direction_random_rad="0.003"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="1"
    on_collision_die="1"
    ragdoll_force_multiplier="0.03"
    ragdoll_fx_on_collision="BLOOD_SPRAY"
	die_on_liquid_collision="1"
    lifetime="20"
    ground_penetration_coeff="0"
    velocity_sets_scale="1"
	velocity_sets_scale_coeff="2"
    camera_shake_when_shot="2.0"
    shoot_light_flash_radius="64"
    hit_particle_force_multiplier="0.1"
    create_shell_casing="0"
    bounces_left="0"
    damage="1"	
	muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_large_pink.xml"
	knockback_force="3.0"
	>
	<config_explosion
		never_cache="1" 
		never_cache="1"
		camera_shake="1.5" 
		explosion_radius="3"
		explosion_sprite="data/particles/explosion_016_plasma_pink.xml"
		explosion_sprite_lifetime="0"
		explosion_sprite_additive="1"
		explosion_sprite_emissive="1"
		create_cell_material="plasma_fading"
		create_cell_probability="15" 
		hole_destroy_liquid="0" 
		hole_enabled="1"
		ray_energy="1000"
		max_durability_to_destroy="5"
		damage="0.35"
		hole_image="data/temp/explosion_hole.png" 
		particle_effect="0 " 
		damage_mortals="1" 
		gore_particle_count="8"
		physics_explosion_power.min="0.2"
		physics_explosion_power.max="0.6" 
		physics_throw_enabled="1" 
		shake_vegetation="1" 
		sparks_count_max="20" 
		sparks_count_min="7" 
		sparks_enabled="0" 
		stains_enabled="1"
		stains_radius="4" 
		light_fade_time="0.2"
		light_r="80"
		light_g="10"
		light_b="70">
	</config_explosion>
  </ProjectileComponent>
  
  <LightComponent 
    _enabled="1" 
    radius="150" 
    r="120"
    g="30"
    b="90">
  </LightComponent>
  
  <ParticleEmitterComponent 
    emitted_material_name="plasma_fading_pink"
    offset.x="0"
    offset.y="0"
	gravity.y="0.0"
	x_vel_min="0"
    x_vel_max="0"
    y_vel_min="-2"
    y_vel_max="2"
    count_min="1"
    count_max="2"
	is_trail="1"
	trail_gap="0.5"
    lifetime_min="0.1"
    lifetime_max="0.8"
    emit_real_particles="0"
	render_on_grid="1"
    emit_cosmetic_particles="1"
    emission_interval_min_frames="1"
    emission_interval_max_frames="2"
    is_emitting="1" >
  </ParticleEmitterComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="projectiles/laser_lasergun">
  </AudioComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/laser_lasergun.xml"
		>
	</VariableStorageComponent>

</Entity>

