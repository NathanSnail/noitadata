<Entity 
	name="$projectile_default" 
	>

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			gravity_y="250"
			air_friction="1.3"
			mass="0.07"
			>
		</VelocityComponent>
	</Base>

	<ProjectileComponent 
		lob_min="0.5"
		lob_max="0.7"
		friction="1"
		direction_random_rad="3.14151"
		on_death_explode="0"
		on_death_gfx_leave_sprite="1" 
		on_lifetime_out_explode="0"
		explosion_dont_damage_shooter="1"
		on_collision_die="1"
		on_collision_remove_projectile="0"
		lifetime="750"
		damage="0.2"
		damage_scaled_by_speed="0"
		lifetime_randomness="7"
		ragdoll_force_multiplier="0"
		hit_particle_force_multiplier="0.1"
		create_shell_casing="0"
		muzzle_flash_file=""
		shoot_light_flash_radius="0"
		die_on_low_velocity="0"
		die_on_low_velocity_limit="5"
		collide_with_shooter_frames="0"
		friendly_fire="0"
		velocity_sets_scale="0"
		knockback_force="1.0"
		bounces_left="1"
		dont_collide_with_tag="player_unit"
		>
		<config_explosion>
		</config_explosion>
	</ProjectileComponent>

	<SetStartVelocityComponent
		randomize_speed.min="150"
		randomize_speed.max="200"
		randomize_angle.min="0"
		randomize_angle.max="6.283185" 
		>
	</SetStartVelocityComponent>
	
	<SpriteComponent 
		image_file="data/projectiles_gfx/spore_pod_spike.xml" >
	</SpriteComponent>

	<ParticleEmitterComponent 
		emitted_material_name="smoke"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="-1"
		y_pos_offset_min="-1"
		x_pos_offset_max="1"
		y_pos_offset_max="1"
		x_vel_min="-10"
		x_vel_max="10"
		y_vel_min="-10"
		y_vel_max="10"
		count_min="0"
		count_max="1"
		lifetime_min="0.1"
		lifetime_max="0.3"
		create_real_particles="1"
		emit_cosmetic_particles="0"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		is_emitting="1" >
	</ParticleEmitterComponent>
</Entity>

