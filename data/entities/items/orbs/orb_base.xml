<Entity tags="hittable,teleportable_NOT,polymorphable_NOT">
	
	<VelocityComponent>
	</VelocityComponent>

	<SimplePhysicsComponent>
	</SimplePhysicsComponent>
	
	<HitboxComponent 
		_tags="enabled_in_world"
		aabb_min_x="-6" 
		aabb_max_x="6" 
		aabb_min_y="-8" 
		aabb_max_y="0" 
		is_enemy="0" 
		is_item="1" 
		is_player="0" >
	</HitboxComponent>

	<UIInfoComponent
		name="$item_orb">
	</UIInfoComponent>

	<ItemComponent
		item_name="$item_orb"
		play_spinning_animation="0"
		auto_pickup="0"
    	play_pick_sound="0"
		enable_orb_hacks="1" >
	</ItemComponent>
	
	<CameraBoundComponent
	  max_count="20"
	  distance="160000">
	</CameraBoundComponent>

	<OrbComponent
		orb_id="0" >
	</OrbComponent>

	<!-- cosmetic 
		tag meanings:
		orb_undiscovered 	- enabled when orb has never been found
		orb_discovered 		- enabled when orb has been found during a previous run
		orb_picked 			- enabled when orb has been found during this run
	-->

	<LightComponent 
		_tags="enabled_in_world"
		_enabled="1" 
		r="255"
		g="255"
		b="255"
		radius="64"
		fade_out_time="0.75" >
	</LightComponent>

	<SpriteComponent 
		_enabled="0"
		_tags="enabled_in_world,orb_undiscovered" 
		alpha="1" 
		image_file="data/items_gfx/orbs/orb.xml" 
		next_rect_animation="" 
		rect_animation="" 
		emissive="0"
		offset_x="0"
		offset_y="0"
		z_index="20" >
	</SpriteComponent>

	<SpriteComponent 
		_enabled="0"
		_tags="enabled_in_world,orb_discovered" 
		alpha="1" 
		image_file="data/items_gfx/orbs/orb_discovered.xml" 
		next_rect_animation="" 
		rect_animation="" 
		emissive="0"
		offset_x="0"
		offset_y="0"
		z_index="20" >
	</SpriteComponent>

	<SpriteComponent 
		_enabled="0"
		_tags="enabled_in_world,orb_picked" 
		alpha="1" 
		image_file="data/items_gfx/orbs/orb_picked.xml" 
		next_rect_animation="" 
		rect_animation="" 
		offset_x="0"
		offset_y="0"
		z_index="20" >
	</SpriteComponent>
	
	<AudioLoopComponent 
		_enabled="1" 
		_tags="sound_jetpack" 
		auto_play="1" 
		calculate_material_lowpass="0" 
		file="data/audio/Desktop/event_cues.bank" 
		event_name="event_cues/orb/loop" >
	</AudioLoopComponent>
	
	<VariableStorageComponent
		name="card_name"
		value_string="LIGHT_BULLET"
	/>

	<LuaComponent 
        _enabled="1" 
        execute_on_added="1"
        remove_after_executed="1"
        script_source_file="data/scripts/items/orb_init.lua" 
	>
    </LuaComponent>

	<LuaComponent 
		script_item_picked_up="data/scripts/items/orb_pickup.lua" >
	</LuaComponent>

</Entity>