<Entity>
	<!-- gravity -->
	<CollisionTriggerComponent
      width="128"
      height="128" 
      radius="64"
      required_tag="player_unit"
      destroy_this_entity_when_triggered="0" >
  	</CollisionTriggerComponent>

    <LuaComponent
      script_collision_trigger_hit="data/scripts/buildings/ominous_orb.lua"
      execute_every_n_frame="-1" >
    </LuaComponent>

	<!-- FX -->

	<LightComponent
		radius="64"
		r="200"
		g="200"
		b="200"
		fade_out_time="0.2"
		>
	</LightComponent>

	<!-- attracted particles -->
	<ParticleEmitterComponent 
		emitted_material_name="spark_blue_dark"
		gravity.y="0.0"
		lifetime_min="0.5"
		lifetime_max="1.0"
		count_min="4"
		count_max="7"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		area_circle_radius.max="64"
		cosmetic_force_create="0"
		airflow_force="0.5"
		airflow_time="0.01"
		airflow_scale="0.05"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		emit_cosmetic_particles="1"
		is_emitting="1" 
		draw_as_long="1"
		attractor_force="7"
		>
	</ParticleEmitterComponent>

	<!-- outer ring -->
  	<ParticleEmitterComponent 
		emitted_material_name="spark_blue_dark"
		gravity.y="0.0"
		lifetime_min="0.2"
		lifetime_max="0.8"
		count_min="7"
		count_max="12"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		area_circle_radius.min="64"
		area_circle_radius.max="64"
		cosmetic_force_create="0"
		airflow_force="0.3"
		airflow_time="0.01"
		airflow_scale="0.05"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		emit_cosmetic_particles="1"
		is_emitting="1" >
	</ParticleEmitterComponent>
</Entity>
