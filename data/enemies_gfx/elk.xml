<Sprite
 filename="data/enemies_gfx/elk.png"
 offset_x="16"
 offset_y="18"
  default_animation="stand" >

 <!-- stand -->
 <RectAnimation
  name="stand"
  pos_x="0"
  pos_y="0"
  frame_count="1"
  frame_width="32"
  frame_height="32"
  frame_wait="0.2"
  frames_per_row="10"
  loop="1"   >
 </RectAnimation>

 <!-- walk -->
 <RectAnimation
  name="walk"
  pos_x="0"
  pos_y="32"
  frame_count="6"
  frame_width="32"
  frame_height="32"
  frame_wait="0.1"
  frames_per_row="10"
  loop="1"   >
  <Event frame="0" name="step" probability="1" check_physics_material="1"/>
  <Event frame="3" name="step" probability="1" check_physics_material="1"/>
 </RectAnimation>

 <!-- look around -->
 <RectAnimation
  name="look_around"
  pos_x="0"
  pos_y="64"
  frame_count="10"
  frame_width="32"
  frame_height="32"
  frame_wait="0.15"
  frames_per_row="10"
  loop="0"   >
 </RectAnimation>
 
 <!-- swim -->
 <RectAnimation
  name="swim_idle"
  pos_x="0"
  pos_y="96"
  frame_count="6"
  frame_width="32"
  frame_height="32"
  frame_wait="0.13"
  frames_per_row="10"
  loop="1"   >
  <Event frame="2" name="paddle" probability="1" check_physics_material="0"/>
  <Event frame="5" name="paddle" probability="1" check_physics_material="0"/>
 </RectAnimation>
 
 <RectAnimation
  name="swim_move"
  pos_x="0"
  pos_y="96"
  frame_count="6"
  frame_width="32"
  frame_height="32"
  frame_wait="0.13"
  frames_per_row="10"
  loop="1"   >
  <Event frame="2" name="paddle" probability="1" check_physics_material="0"/>
  <Event frame="5" name="paddle" probability="1" check_physics_material="0"/>
 </RectAnimation>
</Sprite>